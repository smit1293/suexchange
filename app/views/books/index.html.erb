<h1>Listing books</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Isbn</th>
    <th>Course</th>
    <th>Seller email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.price %></td>
    <td><%= book.isbn %></td>
    <td><%= book.course %></td>
    <td><%= book.seller_email %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

